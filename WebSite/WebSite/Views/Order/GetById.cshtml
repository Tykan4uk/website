@model GetByIdOrderViewModel

@{
    ViewData["Title"] = $"Order";
}

<h1>Order</h1>
@if (Model?.Products.ToList().Count == 0)
{
    <a>Order is empty or not exist!</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Count)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Products.Count(); i++)
            {
            <tr>
                <td>
                    <a>@(i+1)</a>
                </td>
                <th>
                    @Model.Products[i].Name
                </th>
                <th>
                    @Model.Products[i].Description
                </th>
                <th>
                    @Model.Products[i].Count
                </th>
            </tr>
            }
        </tbody>
    </table>
}


